<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop"> 

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFrameworks>net472;net50-windows</TargetFrameworks>  
    <UseWPF>true</UseWPF>    
    <LangVersion>preview</LangVersion>
    
    <NeutralLanguage>en</NeutralLanguage>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>    <!--to only have the english resources-->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <RootNamespace>AvalonLog</RootNamespace>
    <AssemblyName>AvalonLog</AssemblyName>
    <AssemblyTitle>AvalonLog</AssemblyTitle>
    <Title>AvalonLog</Title>  
    <Product>AvalonLog</Product>
    <PackageId>AvalonLog</PackageId>  

    <Version>1.0.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <PackageReleaseNotes>First release based on AvalonEditB 1.0.0 </PackageReleaseNotes>

    
    <Authors>GoswinR</Authors>
    <Copyright>Goswin Rothenthal 2021</Copyright>

    <Description>A fast and threadsave WPF text viewer for colored printing from F#. Based on AvalonEdit</Description>
    <ApplicationIcon>Docs/logo.ico</ApplicationIcon> 
    
    <Configurations>Debug;Release</Configurations>

  </PropertyGroup>

 <PropertyGroup>    
    <!-- nuget Package -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>      
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/goswinr/AvalonLog</PackageProjectUrl>
    <RepositoryUrl>https://github.com/goswinr/AvalonLog</RepositoryUrl>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <PackageIcon>logo128.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageDescription>A fast and threadsave WPF text viewer for colored printing from F#. Based on AvalonEdit</PackageDescription>    
    <PackageTags>WPF Text Console F# AvalonEdit</PackageTags>    
  </PropertyGroup>

  <ItemGroup> 
    <PackageReference Include="AvalonEditB" Version="1.0.0" />
    <!-- <Reference Include="AvalonEditB" HintPath="../AvalonEditB/AvalonEditB/bin/Release/net472/AvalonEditB.dll" /> -->
  </ItemGroup>


  <ItemGroup>
    <None Include="Doc/logo128.png" Pack="true" PackagePath="\" /> <!--PackagePath = "\" makes the fike availabe to nuget pack tool-->
    <None Include="README.md" Pack="true" PackagePath="\" />
    
    <Compile Include="Src/Sync.fs" />
    <Compile Include="Src/Util.fs" />    
    <Compile Include="Src/TextColor.fs" />
    <Compile Include="Src/SelectedTextHighlighter.fs" />
    <Compile Include="Src/AvalonLog.fs" />
  </ItemGroup>


</Project>