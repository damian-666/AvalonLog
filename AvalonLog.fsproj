<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop"> 

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <UseWPF>true</UseWPF>    
    <TargetFramework>net472</TargetFramework>    <!-- not net452 because of long file names-->
    <LangVersion>preview</LangVersion>
    
    <NeutralLanguage>en</NeutralLanguage>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>    <!--to only have the english resources-->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>

    <RootNamespace>AvalonLog</RootNamespace>
    <AssemblyName>AvalonLog</AssemblyName>
    <Version>0.1.0.0</Version>
    <AssemblyVersion>0.1.0.0</AssemblyVersion>
    <FileVersion>0.1.0.0</FileVersion>
    
    <Authors>Goswin Rothenthal</Authors>
    <Product>AvalonLog</Product>
    <Description>A threadsave and colorful text viewer based on AvalonEdit</Description>
    <Copyright>Goswin Rothenthal 2021</Copyright>
    
    <Configurations>Debug;Release</Configurations>
    
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    
    <Company />

  </PropertyGroup>


  <ItemGroup>
    <!-- <PackageReference Update="FSharp.Core" Version="5.0.1" />  don't do this for libraries, only exe-->
    <!--<PackageReference Include="AvalonEdit" Version="6.1.1" />-->
  </ItemGroup>

  <ItemGroup>            
    <Reference Include="WindowsBase" />
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="AvalonEditB">
      <!-- build from dev branch of https://github.com/goswinr/AvalonEditB -->
      <HintPath>../AvalonEditB/AvalonEditB/bin/Release/net472/AvalonEditB.dll</HintPath>
    </Reference>
  </ItemGroup>


  <ItemGroup>
    <Compile Include="Src/Util.fs" />
    <Compile Include="Src/Global.fs" />
    <Compile Include="Src/TextColor.fs" />
    <Compile Include="Src\SelectedTextHighlighter.fs" />
    <Compile Include="Src/AvalonLog.fs" />
  </ItemGroup>


</Project>